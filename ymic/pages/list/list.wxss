/* pages/list/list.wxss */
.logo{
  position: relative;
  width: 100%;
  padding-top: 60%;
  transform-origin: top;
  background-size: cover;
}
.logo image{
  width: 100%;
}
.logo .text{
  width: 100%;
  text-align: center;
  position: absolute;
  top: 20%;
  color: #fff;
  font-size: 20px;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.songlist {
  padding: 20rpx 40rpx;
  background-color: #3b200c;
}
.songlist .name{
  font-size: 30rpx;
  color: #fff;
  margin-bottom: 10rpx;
}
.songlist .auth{
   font-size: 24rpx;
   color: rgba(255, 255, 255, 0.3);
   white-space: nowrap;
   overflow: hidden;
   text-overflow: ellipsis;
}
